<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.StuSystem.mapper.StudentInfoMapper">
    <select id="get" resultType="StudentInfo">
        SELECT * FROM student_info WHERE stu_no = #{stu_no}
    </select>

    <update id="update" parameterType="StudentInfo">
        UPDATE student_info SET selection_result = #{selection_result}
    </update>

    <update id="updatePsw">
        UPDATE student_info SET stu_pwd = #{newPsw} WHERE stu_no=#{stu_no}
    </update>
</mapper>